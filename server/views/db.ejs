<!DOCTYPE html>
<html>
  <head>
    <title>Database Status</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      .button {
        display: inline-block;
        padding: 12px 20px;
        margin: 10px;
        background-color: #a178f3;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 16px;
      }
      .button:hover {
        background-color: #956aea;
      }
      .success {
        color: green;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>DB Operations</h1>
    <% if (Array.isArray(links) && links.length > 0) { %> 
    <% links.forEach(link => { %>
    <a href="<%= link.url %>" class="button"><%= link.label %></a>
    <% }); %> 
    <% } %>

    <% if (respMessage?.length > 0) { %> 
      <% if (respMessage) { %>
        <label class="success"><%= respMessage %></label>
      <% } %>
    <% } %>
  </body>
</html>
